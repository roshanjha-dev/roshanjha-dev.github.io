<div class="list-groups">
  {% for content in data[1] %}
    <div class="list-group w-100 mb-3" title="{{ content.level }}">
      <table class="table-cv list-group-table">
        <tbody>
          <!-- Category Row -->
          <tr>
            <td class="list-group-category-icon">
              {% if content.icon %}
                <i class="{{ content.icon }}"></i>
              {% endif %}
            </td>
            <td class="list-group-category" colspan="2">
              <b>{{ content.name }}</b>
            </td>
          </tr>

          <!-- Keywords Row (Inline, with bullets) -->
          <tr>
            <td></td>
            <td colspan="2">
              {% for item in content.keywords %}
                <span style="margin-right: 12px;">â€¢ {{ item }}</span>
              {% endfor %}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
